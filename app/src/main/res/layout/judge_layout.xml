<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/rg_inspection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="@drawable/check_selector"
            android:text="动火设备内部构件清理干净"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核人:费振华"
            android:textColor="@color/gray" />

        <CheckBox
            android:id="@+id/cb_b"
            android:button="@null"
            android:drawableRight="@drawable/check_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="断开与动火设备相关的所有管线"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核人:费振华"
            android:textColor="@color/gray" />

        <CheckBox
            android:id="@+id/cb_c"
            android:button="@null"
            android:drawableRight="@drawable/check_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="动火点周围易燃物已经清除"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核人:费振华"
            android:textColor="@color/gray" />

        <CheckBox
            android:id="@+id/cb_d"
            android:button="@null"
            android:drawableRight="@drawable/check_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高处作业已采取防火花飞溅措施"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核人:费振华"
            android:textColor="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_inspection"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="备注信息" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ensure"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_below="@+id/ll_more"
        android:background="@color/green_text"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="30px" />

</RelativeLayout>