<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/rg_inspection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sign_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费振华"
                android:textColor="@color/black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_judge_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_status_a"
                android:text="动火设备内部构件清理干净"
                android:textColor="@color/gray" />

            <ImageView
                android:id="@+id/iv_face_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_toLeftOf="@+id/iv_card_a"
                android:src="@mipmap/face_checked" />

            <ImageView
                android:id="@+id/iv_card_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10px"
                android:src="@mipmap/nfc_checked" />

            <TextView
                android:layout_toRightOf="@+id/tv_sign_a"
                android:id="@+id/sign_status_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="签名状态"
                android:textColor="@color/white" />

            <View
                android:layout_marginTop="20px"
                android:layout_below="@+id/iv_face_a"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toRightOf="@+id/tv_sign_b"
                android:id="@+id/sign_status_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="签名状态"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_sign_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费振华"
                android:textColor="@color/black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_judge_content_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_status_b"
                android:text="断开与动火设备相关的所有管线"
                android:textColor="@color/gray" />

            <ImageView
                android:id="@+id/iv_face_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_toLeftOf="@+id/iv_card_b"
                android:src="@mipmap/face_checked" />

            <ImageView
                android:id="@+id/iv_card_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10px"
                android:src="@mipmap/nfc_checked" />

            <View
                android:layout_marginTop="20px"
                android:layout_below="@+id/iv_face_b"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toRightOf="@+id/tv_sign_c"
                android:id="@+id/sign_status_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="签名状态"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_sign_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费振华"
                android:textColor="@color/black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_judge_content_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_status_c"
                android:text="动火店周围易燃物已经清除"
                android:textColor="@color/gray" />

            <ImageView
                android:id="@+id/iv_face_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_toLeftOf="@+id/iv_card_c"
                android:src="@mipmap/face_checked" />

            <ImageView
                android:id="@+id/iv_card_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10px"
                android:src="@mipmap/nfc_checked" />

            <View
                android:layout_marginTop="20px"
                android:layout_below="@+id/iv_face_c"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toRightOf="@+id/tv_sign_d"
                android:id="@+id/sign_status_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="签名状态"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_sign_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费振华"
                android:textColor="@color/black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_judge_content_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_status_d"
                android:text="高处作业已经采取防火花飞溅措施"
                android:textColor="@color/gray" />

            <ImageView
                android:id="@+id/iv_face_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_toLeftOf="@+id/iv_card_d"
                android:src="@mipmap/face_checked" />

            <ImageView
                android:id="@+id/iv_card_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10px"
                android:src="@mipmap/nfc_checked" />

            <View
                android:layout_marginTop="20px"
                android:layout_below="@+id/iv_face_d"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_inspection"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:hint="备注信息" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ensure_sign"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_below="@+id/ll_more"
        android:background="@color/green_text"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="30px" />

</RelativeLayout>