<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_test_time"
            android:textSize="20px"
            android:textColor="@color/gray"
            android:text="检测时间"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_test_info"
            android:textSize="30px"
            android:textStyle="bold"
            android:layout_marginTop="15px"
            android:textColor="@color/black"
            android:text="检测数据"/>

        <LinearLayout
            android:layout_marginTop="28px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_test_man_a"
                    android:textColor="@color/green_text"
                    android:textSize="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检测人:"/>
                <TextView
                    android:layout_below="@+id/tv_test_man_a"
                    android:id="@+id/tv_test_man"
                    android:textSize="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检测人:"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_test_location_title"
                    android:textColor="@color/green_text"
                    android:textSize="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检测区域:"/>
                <TextView
                    android:layout_below="@+id/tv_test_location_title"
                    android:id="@+id/tv_test_location"
                    android:textSize="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="监测区域"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@color/activity_gray"/>
</LinearLayout>

