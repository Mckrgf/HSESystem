<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="www.supcon.com.hsesystem.Activity.ManExamineActivity">

    <include layout="@layout/tiitlebar"
        android:id="@+id/title"/>

    <include layout="@layout/user_info"
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"/>

    <include layout="@layout/examine_item"
        android:layout_margin="10dp"
        android:id="@+id/examine_item"
        android:layout_below="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/examine_item"
        android:layout_above="@id/bottom_tab">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/work_item1"
                android:layout_margin="10dp"
                android:id="@+id/work_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <include layout="@layout/work_item2"
                android:layout_margin="10dp"
                android:layout_below="@id/work_item1"
                android:id="@+id/work_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_below="@+id/work_item2"
                android:id="@+id/rg_inspection"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需要对以下几项进行审核:"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动火设备内部构件清理干净"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="断开与动火设备相关的所有管线"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动火点周围易燃物已经清除"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高处作业已采取防火花飞溅措施"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:id="@+id/ll_more"
                android:layout_below="@+id/rg_inspection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="备注信息"/>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/ll_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_pass"
                    android:background="@color/gray"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核通过"/>
                <Button
                    android:background="@color/red"
                    android:id="@+id/bt_refuse"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核拒绝"/>

            </LinearLayout>



        </RelativeLayout>
    </ScrollView>


    <include layout="@layout/bottom_tab"
        android:id="@+id/bottom_tab"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"/>
</RelativeLayout>
