<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.supcon.com.hsesystem.Activity.ManExamineActivity">

    <include layout="@layout/tiitlebar"
        android:id="@+id/title"/>

    <include layout="@layout/user_info"
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"/>

    <LinearLayout
        android:layout_below="@+id/user_info"
        android:id="@+id/rg_inspection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动火设备内部构件清理干净"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断开与动火设备相关的所有管线"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动火点周围易燃物已经清除"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高处作业已采取防火花飞溅措施"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_pass"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rg_inspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="审核通过"/>

    <include layout="@layout/bottom_tab"
        android:id="@+id/bottom_tab"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"/>
</RelativeLayout>
