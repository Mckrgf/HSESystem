<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="www.supcon.com.hsesystem.Activity.ManExamineActivity">

    <include
        android:id="@+id/title"
        layout="@layout/tiitlebar"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="97px"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23px"
            android:src="@mipmap/ic_gray_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="工单详情"
            android:textColor="@color/white" />

    </RelativeLayout>


    <ScrollView
        android:background="@color/activity_light_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_judge"
        android:layout_below="@+id/rl_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/work_item1"
                layout="@layout/work_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:layout_marginTop="10px"
                android:id="@+id/examine_item"
                layout="@layout/examine_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_item1" />

            <LinearLayout
                android:id="@+id/rg_inspection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/examine_item"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需要对以下几项进行审核:" />

                <CheckBox
                    android:id="@+id/cb_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动火设备内部构件清理干净" />

                <CheckBox
                    android:id="@+id/cb_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="断开与动火设备相关的所有管线" />

                <CheckBox
                    android:id="@+id/cb_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动火点周围易燃物已经清除" />

                <CheckBox
                    android:id="@+id/cb_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高处作业已采取防火花飞溅措施" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rg_inspection"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="备注信息" />
            </LinearLayout>


            <include
                android:id="@+id/user_info"
                layout="@layout/user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="162dp"
                android:visibility="gone" />


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:elevation="10dp"
        android:id="@+id/ll_judge"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_judge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="审核项(0/5)"
            android:textSize="26px" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="签名项(0/5)"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="审核拒绝"
            android:textSize="26px" />

    </LinearLayout>

    <include
        android:id="@+id/bottom_tab"
        layout="@layout/bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />
</RelativeLayout>
